<section class='analytics-section'>
  <span><%= link_to 'Back', root_path, class: 'btn--link left' %></span>
  <h1 class='analytics-section__heading'> Analytics: popular searches </h1>
  <% if(@top_queries.length === 0)%>
    <p class='analytics-section__text'>No searches made yet</p>

    <%else%>

  <table class='table'>
  <tr class='table__row table__row--heading'>
    <th class='table__header'>Query</th>
    <th class='table__header'>number of searches</th>
    <th class='table__header'>articles</th>
    <th class='table__header'>Last occurence</th>
  </tr>
  <% @top_queries.each_with_index do |query, index| %>
<tr class='table__row'>  
  <td class='table__data'> <%= query[0]  %> </td>
  <td class='table__data'> <%= query[1] %> </td>
  <td class='table__data'><%= query[2]  %> </td>
  <td class='table__data'><%= query[3]  %> </td>
</tr>
  <% end %>
</table>
  <%end%>
</section>

